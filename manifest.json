{
  "manifest_version": 3,
  "name": "채택트",
  "version": "1.5",
  "host_permissions": [
    "https://*.amazonaws.com/*",
    "https://lms.mildang.kr/*"
  ],
  "permissions": [
    "clipboardWrite",
    "storage",
    "tabs", 
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://lms.mildang.kr/chat-monitor/*", "http://localhost/*"
      ],
      "js": [
        "html2canvas.min.js",
        "sizeControl.js",
        "utils.js",
        "content.js",
        "template.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icon/*.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}